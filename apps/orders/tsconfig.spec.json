{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out-tsc/jest",
    "jsx": "react-jsx",
    "types": ["jest", "node"]
  },
  "include": [
    "jest.config.ts",
    "setupTests.ts",
    "setupTests.i18n.ts",
    "./public/locales/locale_en.json",
    "./public/locales/locale_es.json",
    "./public/locales/locale_fr.json",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    }
  ]
}
